#!/usr/bin/env bash
#!/bin/bash

set -e

echo -e "\nGenerating Binary..."

CURRENTDIR=`pwd`

version=$(echo "${TRAVIS_BRANCH:-dev}" | sed 's/^v//')

BASEDIR=$(dirname $0)
export CGO_ENABLED=0

packr2 build -ldflags="-s -w -X main.Version=${version}" -o $CURRENTDIR/out/bbl github.com/cloudfoundry/bosh-bootloader/bbl
